<?php
$weapons = ['fists', 'whip', 'gun'];
$opponentWeapon = $weapons[rand(0,2)];
$indyWeapon = "";
switch ($opponentWeapon) {
    case $weapons[0]:
        $indyWeapon = $weapons[2];
        break;
    case $weapons[1]:
        $indyWeapon = $weapons[0];
        break;
    case $weapons[2]:
        $indyWeapon = $weapons[1];
        break;
}
echo "<b>".$indyWeapon."</b> is stronger than <b>".$opponentWeapon."</b>";
?>
